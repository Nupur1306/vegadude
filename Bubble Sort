#include<stdio.h>
#include<conio.h>
void bubblesort(int a[20],int n)
{  
    int i,j,temp,k;
    for (i=0;i<n;i++)
    {
    	for(j=0;j<n-i-1;j++)
    	if(a[j]>a[j+1])
    	{  
    	   temp=a[j];
    	   a[j]=a[j+1];
    	   a[j+1]=temp;
    	}
    printf("\n pass-%d  ",i);
    for(k=0;k<n;k++)
	printf("%d\t",a[k]);
   }
}
int main()
{
	int a[20],n,i,j;
	printf("enter size of array");
	scanf("%d",&n);
	printf("\n enter %d elements of array: ",n);
	for(i=0;i<n;i++)
	{
		scanf("%d",&a[i]);
	}
	
	bubblesort(a,n);
	printf("\nsorted array  ");
	for(i=0;i<n;i++)
	printf("%d\t",a[i]);
	getch();
}
